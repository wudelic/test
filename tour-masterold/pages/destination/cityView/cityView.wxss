/* pages/destination/cityView/cityView.wxss */

page {
  background: #f0ede2;
  font-weight: bold;
}

/*tab栏*/

.tab {
  display: flex;
  width: 100%;
  height: 86rpx;
  background: #fff;
}

.tab view {
  flex: 1;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.tab view text:first-child {
  font-size: 24rpx;
  color: #948475;
}

.tab view .icon {
  margin-left: 20rpx;
  height: 13rpx;
  width: 22rpx;
  background: url(/images/destination/tab_icon.png)no-repeat 0 0;
  background-size: 22rpx 13rpx;
}

/*景点*/

.view-box {
  width: 100%;
  padding: 0 10rpx 0 18rpx;
  box-sizing: border-box;
}

.view {
  width: 100%;
  background: #fff;
  padding: 12rpx 18rpx 16rpx 12rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.view .img {
    float: left;
  width: 233rpx;
  height: 172rpx;
  border-radius: 10rpx;
  background: red;
}

.view .info {
    margin-left: 251rpx;
}

.view .info .title, .view .info .desc {
  display: block;

}

.view .info .title {
  font-size: 28rpx;
  color: #666;
  line-height: 38rpx;
  margin-top: 10rpx;
}

.view .info .desc {
  font-size: 20rpx;
  color: #bbb4af;
  line-height: 28rpx;
}

.view .info .price {
  display: flex;
  color: #bbb4af;
  margin-top: 46rpx;
  align-items: center;
}

.view .price .new-price {
  color: #fa6f12;
  font-size: 26rpx;
}

.view .price .old-price {
  position: relative;
  font-size: 20rpx;
  margin-left: 10rpx;
}

.view .price .old-price .line {
  position: absolute;
  width: 100%;
  height: 1px;
  background: #bbb4af;
  top: 50%;
  left: 0;
}

.view .price .seller {
  margin-left: auto;
  font-size: 22rpx;
}
